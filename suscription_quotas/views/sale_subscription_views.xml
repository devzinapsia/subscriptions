<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_quote_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.quote.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_order_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='subscription_details']" position="inside">
                <field name="next_quota" invisible="not is_subscription"/>
                <field name="max_quotas" invisible="not is_subscription"/>
                <field name="quota_legend" 
                       invisible="not is_subscription" 
                       placeholder="Ej: Cuota %d de %d"/>
            </xpath>
        </field>
    </record>
</odoo>